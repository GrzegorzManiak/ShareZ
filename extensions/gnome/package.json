{
  "name": "sharez",
  "version": "0.0.1",
  "description": "ShareZ is a GNOME Shell extension that communicates with the ShareZ application to Window information",
  "author": "GrzegorzManiak",
  "scripts": {
    "build": "bun run esbuild.config.js",
    "build-watch": "nodemon --watch . --exec 'npm run build'",
    "install-ext": "gnome-extensions install -f ../../dist/gnome/sharez@grzegorz.ie.zip",
    "automate": "nodemon",
    "debug-shell": "dbus-run-session -- gnome-shell --nested --wayland",
    "debug-shell-filterd": "dbus-run-session -- gnome-shell --nested --wayland | grep '^\\[SHAREZ\\]'\n",
    "monitor-dbus": "dbus-monitor \"interface='dev.grzegorzmaniak.sharez',path='/dev/grzegorzmaniak/sharez'\"",
    "monitor-logs": "journalctl /usr/bin/gnome-shell -f -o cat"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "adm-zip": "^0.5.10",
    "babel": "^6.23.0",
    "esbuild": "^0.19.3",
    "fast-xml-parser": "^4.2.7",
    "hard-source-webpack-plugin": "^0.13.1",
    "json-serializer": "^2.0.12",
    "string-replace-loader": "^3.1.0",
    "thread-loader": "^3.0.4",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^5.0.12",
    "webpack-bundle-tracker": "^1.8.1",
    "webpack-shell-plugin": "^0.5.0",
    "webpack-shell-plugin-next": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-flow": "^7.21.4",
    "@babel/preset-typescript": "^7.22.15",
    "@girs/adw-1": "^1.4.0-3.2.5",
    "@girs/clutter-13": "^13.0.0-3.2.5",
    "@girs/gdk-4.0": "^4.0.0-3.2.5",
    "@girs/gio-2.0": "^2.78.0-3.2.5",
    "@girs/glib-2.0": "^2.78.0-3.2.5",
    "@girs/gnome-shell": "^45.0.0-beta2",
    "@girs/gobject-2.0": "^2.78.0-3.2.5",
    "@girs/gtk-4.0": "^4.12.4-3.2.7",
    "@girs/meta-13": "^13.0.0-3.2.5",
    "@girs/mtk-13": "^13.0.0-3.2.5",
    "@girs/pango-1.0": "^1.51.0-3.2.5",
    "@girs/shell-13": "^13.0.0-3.2.7",
    "@girs/st-13": "^13.0.0-3.2.5",
    "@types/adm-zip": "^0.5.1",
    "@types/dompurify": "^2.4.0",
    "babel-loader": "^8.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "happypack": "^5.0.1",
    "null-loader": "^4.0.1",
    "random-words": "^1.3.0",
    "terser-webpack-plugin": "^5.3.7",
    "webpack": "^5.77.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^4.10.0"
  }
}
